{
  "name": "types-install",
  "version": "1.0.0",
  "description": "快速安装对应的 types 包",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "clean": "rm -rf ./dist",
    "build": "yarn clean && tsc && chmod +x dist/fast-create.js",
    "prepare": "yarn build",
    "check-types": "tsc --noEmit",
    "check-formatting": "prettier --check '**/*.{js,json,md,tsx,ts}'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KieSun/types-install.git"
  },
  "keywords": [
    "yarn",
    "types"
  ],
  "author": "KieSun",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/KieSun/types-install/issues"
  },
  "homepage": "https://github.com/KieSun/types-install#readme",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "eslint": "^7.15.0",
    "eslint-plugin-prettier": "^3.2.0",
    "husky": "^4.3.4",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "typescript": "^4.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md,tsx,ts}": [
      "prettier --write",
      "git add"
    ]
  }
}
